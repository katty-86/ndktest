<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kaky.ndktest.MainActivity"
    tools:showIn="@layout/activity_main"
    android:onClick="testingDes">

    <TextView
        android:id="@+id/my_tekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sotring/Matrix result"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sort"
        android:id="@+id/sort"
        android:onClick="printSort"
        android:layout_above="@+id/matrix"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATRIX"
        android:id="@+id/matrix"
        android:onClick="printMatrix"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/sort"
        android:layout_alignEnd="@+id/sort" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DES TEST"
        android:id="@+id/des_button"
        android:onClick="testingDES"
        android:layout_below="@+id/matrix"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
